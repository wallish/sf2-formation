
{% extends "::base.html.twig" %}
{% block body %}
<div class="content jumbotron">
	{# total items count #}
	<table class="table table-striped table-hover ">
	<tr>
	{# sorting of properties based on query components #}
		<th>Title</th>
	    <th>Show</th>
	</tr>

	{# table body #}
	{% for value in result %}
	<tr {% if loop.index is odd %}class="color"{% endif %}>
	    <td>{{value.getData().title}}</td>
	    <td><a href="{{ path('post_show', {'slug':value.getData().slug}) }}">show</a></td>
	</tr>
	{% endfor %}
	</table>
	{# display navigation #}	
</div>
{% endblock %}
